<h1>Welcome to Instagaram</h1>
<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to'Log Out', logout_path %>
<% else %>
  <%= link_to 'Sign Up', signup_path %> or 
  <%= link_to 'Log In', login_path %>
<% end %>

<p id=”notice”><%= notice %></p>

<h2>Listings </h2>
<%= link_to 'All Listings', controller: 'listings' %>
<%= link_to 'New Listings', controller: 'listings' %>


<h2>Search  </h2>
<%= form_tag(search_path, method: :get ) do %>
  Country: <%= text_field_tag :country %><br/>
  Entries: <%= text_field_tag :description %><br/>
  <%= submit_tag 'Search', name: nil %>
<% end %>


<h2>Users</h2>
<% User.all.each do |user| %>
	<ul>
		<li>id: <%= user.id %></li>
		<li>email:  <%= link_to user.email, user_path(user) %></li>
	</ul>

<% end %>



<h1>Cloneinstagaram</h1>
<p>Back to Square One, where it all began. Share to the world and have fun.</p>
